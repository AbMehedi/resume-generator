      <Button fx:id="Back" layoutX="47.0" layoutY="520.0" mnemonicParsing="false"
              onAction="#backToSkills" prefWidth="100.0" text="Back" />

      <Button fx:id="NextButton" layoutX="547.0" layoutY="520.0" mnemonicParsing="false"
