      <Label layoutX="42.0" layoutY="85.0" text="1." />
      <Label layoutX="42.0" layoutY="121.0" text="Company Name" />
      <Label layoutX="42.0" layoutY="157.0" text="Job Title" />
      <Label layoutX="42.0" layoutY="193.0" text="Job Description" />

      <TextField fx:id="Company1" layoutX="160.0" layoutY="117.0" prefWidth="500.0" />
      <TextField fx:id="JobTitle1" layoutX="161.0" layoutY="153.0" prefWidth="500.0" />
      <TextArea fx:id="JobDescription1" layoutX="161.0" layoutY="189.0" prefWidth="500.0" prefHeight="80.0"
