<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="700.0" minWidth="900.0" prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.resumegen.SkillsController">
   <children>
      <VBox layoutX="14.0" layoutY="22.0" prefHeight="656.0" prefWidth="858.0" spacing="20">
         <Label styleClass="header" text="Skills" underline="true" />

         <VBox spacing="10">
            <Label styleClass="form-label" text="Add your skills and proficiency level:" />
            <VBox fx:id="skillsContainer" prefWidth="660" spacing="10.0" />
            <Button fx:id="addSkillButton" mnemonicParsing="false" onAction="#addSkillField" styleClass="secondary-button" text="Add Skill" />
         </VBox>

         <Label fx:id="label" styleClass="error-label" visible="false" />

         <HBox alignment="BOTTOM_RIGHT" prefHeight="434.0" prefWidth="650.0" spacing="20">
            <Button fx:id="Back" mnemonicParsing="false" onAction="#backToEducationPage" styleClass="secondary-button" text="Back" />
            <Button fx:id="SaveAndContinue" mnemonicParsing="false" onAction="#Experience" styleClass="primary-button" text="Save &amp; Continue" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
