<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="700.0" minWidth="900.0" prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.resumegen.InterestsController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefWidth="660" spacing="20">
            <Label styleClass="header" text="Interests" underline="true" />

            <VBox spacing="10">
                <Label styleClass="form-label" text="Add your interests and hobbies:" />
                <HBox spacing="10.0">
                    <TextField fx:id="interestField" prefWidth="500.0" promptText="Enter interest" styleClass="text-field" />
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addInterest" styleClass="secondary-button" text="Add" />
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Your Interests:" />
                <ListView fx:id="interestsList" prefHeight="200.0" prefWidth="660.0" styleClass="list-view" />
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="660" spacing="20">
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToLanguages" styleClass="secondary-button" text="Back" />
                <Button fx:id="generateButton" mnemonicParsing="false" onAction="#generateResume" styleClass="primary-button" text="Generate PDF" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
