<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="700.0" minWidth="463.0" prefHeight="722.0" prefWidth="886.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.resumegen.Personal_InfoController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefWidth="760" spacing="20">
         <Label styleClass="header" text="Personal Information" underline="true" />

         <HBox alignment="TOP_LEFT" prefHeight="646.0" prefWidth="891.0" spacing="30" styleClass="root" stylesheets="@style.css">
            <!-- Left Column -->
            <VBox prefWidth="500" spacing="15">
               <Label styleClass="form-label" text="First Name*" />
               <TextField fx:id="FirstName" prefHeight="40.0" prefWidth="500.0" styleClass="text-field" />

               <Label styleClass="form-label" text="Last Name*" />
               <TextField fx:id="LastName" prefHeight="40.0" prefWidth="500.0" styleClass="text-field" />

               <Label styleClass="form-label" text="Email*" />
               <TextField fx:id="Email" prefHeight="40.0" prefWidth="500.0" styleClass="text-field" />

               <HBox spacing="20">
                  <VBox prefWidth="240" spacing="5">
                     <Label styleClass="form-label" text="Phone" />
                     <TextField fx:id="Phone" prefHeight="40.0" styleClass="text-field" />
                  </VBox>
                  <VBox prefWidth="240" spacing="5">
                     <Label styleClass="form-label" text="Nationality" />
                     <TextField fx:id="Nationality" prefHeight="40.0" styleClass="text-field" />
                  </VBox>
               </HBox>

               <Label styleClass="form-label" text="Address" />
               <TextField fx:id="Address" prefHeight="40.0" prefWidth="500.0" styleClass="text-field" />

               <Label styleClass="form-label" text="About Me*" />
               <TextArea fx:id="AboutMe" prefHeight="150.0" prefWidth="500.0" promptText="Write a brief professional summary (at least 50 characters)" styleClass="text-area" wrapText="true" />
            </VBox>
      
            <!-- Right Column - Profile Picture -->
            <VBox alignment="TOP_CENTER" spacing="10">
               <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" styleClass="profile-image" />
               <Button fx:id="chooseImageButton" mnemonicParsing="false" onAction="#handleChooseImage" styleClass="secondary-button" text="Choose Image" />
               <Label fx:id="imageErrorLabel" styleClass="error-label" visible="false" />
               <Button fx:id="SaveAndContinue" mnemonicParsing="false" onAction="#saveAndContinue" styleClass="primary-button" text="Save &amp; Continue" />
               <Button fx:id="Back" mnemonicParsing="false" onAction="#backToDashBoard" styleClass="secondary-button" text="Back" />
            </VBox>
         </HBox>

         <Label fx:id="label" styleClass="error-label" visible="false" />

         <HBox alignment="BOTTOM_RIGHT" prefWidth="760" spacing="20" />
      </VBox>
   </children>
</AnchorPane>
