<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.resumegen.Personal_InfoController">

   <Label layoutX="35.0" layoutY="32.0" text="Personal Information" underline="true">
      <font>
         <Font name="Bell MT Bold" size="24.0" />
      </font>
   </Label>

   <Label layoutX="35.0" layoutY="80.0" text="First Name*" />
   <TextField fx:id="FirstName" layoutX="35.0" layoutY="100.0" prefWidth="250.0" />

   <Label layoutX="35.0" layoutY="140.0" text="Last Name*" />
   <TextField fx:id="LastName" layoutX="35.0" layoutY="160.0" prefWidth="250.0" />

   <Label layoutX="35.0" layoutY="200.0" text="Email*" />
   <TextField fx:id="Email" layoutX="35.0" layoutY="220.0" prefWidth="580.0" />

   <Label layoutX="35.0" layoutY="260.0" text="Phone" />
   <TextField fx:id="Phone" layoutX="35.0" layoutY="280.0" prefWidth="250.0" />

   <Label layoutX="365.0" layoutY="260.0" text="Nationality" />
   <TextField fx:id="Nationality" layoutX="365.0" layoutY="280.0" prefWidth="250.0" />

   <Label layoutX="35.0" layoutY="320.0" text="Address" />
   <TextField fx:id="Address" layoutX="35.0" layoutY="340.0" prefWidth="580.0" />

   <Label layoutX="35.0" layoutY="380.0" text="About Me*" />
   <TextArea fx:id="AboutMe" layoutX="35.0" layoutY="400.0" prefHeight="120.0" prefWidth="580.0"
             promptText="Write a brief professional summary (at least 50 characters)"/>

   <Label fx:id="label" layoutX="35.0" layoutY="530.0" textFill="RED" visible="false" />

   <Button fx:id="Back" layoutX="35.0" layoutY="560.0" mnemonicParsing="false"
           onAction="#backToDashBoard" text="Back" />

   <Button fx:id="SaveAndContinue" layoutX="540.0" layoutY="560.0" mnemonicParsing="false"
           onAction="#saveAndContinue" text="Save &amp; Continue" />
</AnchorPane>