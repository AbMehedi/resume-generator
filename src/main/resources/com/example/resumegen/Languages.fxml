<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.resumegen.LanguagesController">

    <Label layoutX="35.0" layoutY="32.0" text="Languages" underline="true">
        <font>
            <Font name="Bell MT Bold" size="24.0" />
        </font>
    </Label>

    <HBox layoutX="50.0" layoutY="70.0" spacing="10.0">
        <TextField fx:id="languageField" promptText="Language" prefWidth="150.0"/>
        <ComboBox fx:id="proficiencyComboBox" prefWidth="150.0"/>
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addLanguage" text="Add"/>
    </HBox>

    <ListView fx:id="languagesList" layoutX="50.0" layoutY="110.0" prefHeight="250.0" prefWidth="500.0"/>

    <Label fx:id="errorLabel" layoutX="50.0" layoutY="370.0" textFill="RED" visible="false" />

    <Button fx:id="backButton" layoutX="40.0" layoutY="420.0" mnemonicParsing="false"
            onAction="#backToExperience" text="Back"/>

    <Button fx:id="nextButton" layoutX="465.0" layoutY="420.0" mnemonicParsing="false"
            onAction="#goToInterests" text="Save &amp; Continue"/>
</AnchorPane>