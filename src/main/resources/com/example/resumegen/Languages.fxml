<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="700.0" minWidth="900.0" prefHeight="700.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.resumegen.LanguagesController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefWidth="660" spacing="20">
            <Label styleClass="header" text="Languages" underline="true" />

            <VBox spacing="10">
                <Label styleClass="form-label" text="Add languages you speak:" />
                <HBox spacing="10.0">
                    <TextField fx:id="languageField" prefWidth="250.0" promptText="Language" styleClass="text-field" />
                    <ComboBox fx:id="proficiencyComboBox" prefWidth="200.0" styleClass="combo-box" />
                    <Button fx:id="addButton" mnemonicParsing="false" onAction="#addLanguage" styleClass="secondary-button" text="Add" />
                </HBox>
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Your Languages:" />
                <ListView fx:id="languagesList" prefHeight="200.0" prefWidth="660.0" styleClass="list-view" />
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false" />

            <HBox alignment="BOTTOM_RIGHT" prefWidth="660" spacing="20">
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToExperience" styleClass="secondary-button" text="Back" />
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#goToInterests" styleClass="primary-button" text="Save &amp; Continue" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
